pragma solidity ^0.8.23;

import {Script, console} from "forge-std/Script.sol";
import {console2} from "forge-std/console2.sol";
import {Test} from "forge-std/Test.sol";
import {Multicaller} from "multicaller/src/Multicaller.sol";
import {Permit2} from "permit2-relay/src/Permit2.sol";
import {ApprovalProxy} from "../src/ApprovalProxy.sol";
import {OnlyOwnerMulticaller} from "../src/OnlyOwnerMulticaller.sol";
import {RelayRouter} from "../src/RelayRouter.sol";
import {OwnableRelayRouter} from "../src/OwnableRelayRouter.sol";
import {RelayReceiver} from "../src/RelayReceiver.sol";
import {ICreate2Factory} from "../src/interfaces/ICreate2Factory.sol";
import {BaseDeployer} from "./BaseDeployer.s.sol";

contract SingleChainDeployer is Script, Test, BaseDeployer {
    error NoImmutableCreate2Factory(uint256 chainId);
    error InvalidContractAddress(address expected, address actual);

    function setUp() public {}

    // NOTE: This script assumes that the ImmutableCreate2Factory has been deployed.
    // If it hasn't been deployed yet, run `bash-utils/deploy.sh` first
    function run() public {
        deploy();
    }

    function deploy() private {
        vm.startBroadcast(owner);
        address permit2 = deployPermit2();
        address multicaller = deployMulticaller();
        address erc20Router = deployOwnableRelayRouter(permit2, multicaller);
        address approvalProxy = deployApprovalProxy(erc20Router);
        if (vm.envBool("IS_TESTNET") == true) {
            deployRelayReceiver(TESTNET_SOLVER);
        } else {
            deployRelayReceiver(SOLVER);
        }
        address onlyOwnerMulticaller = deployOnlyOwnerMulticaller__latestBytecode(
                ONLY_OWNER_MULTICALLER
            );
        vm.stopBroadcast();

        console2.log("\n");
    }

    /// @notice Deploys the Multicaller contract to the given chain
    function deployMulticaller() public returns (address) {
        console2.log("Deploying Multicaller...");

        // Return if multicaller has already been deployed to the chain
        if (_hasBeenDeployed(MULTICALLER)) {
            console2.log(
                "Multicaller has already been deployed at: ",
                MULTICALLER
            );

            return MULTICALLER;
        }

        // If ImmutableCreate2Factory cannot be deployed (no non-replay protected txs), deploy Multicaller using the default Create2Factory
        if (noImmutableCreate2Factory[block.chainid]) {
            console2.log("No ImmutableCreate2Factory on chain");
            console2.log(
                "Deploying Multicaller using Create2 Factory at 0x4e59b44847b379578588920cA78FbF26c0B4956C..."
            );

            address multicaller = _deployMulticallerWithDefaultCreate2Factory();

            return multicaller;
        }

        if (!_hasBeenDeployed(IMMUTABLE_CREATE2_FACTORY)) {
            console2.log("No ImmutableCreate2Factory deployed on chain.");
            revert NoImmutableCreate2Factory(block.chainid);
        }

        address deployedAddress = ICreate2Factory(IMMUTABLE_CREATE2_FACTORY)
            .safeCreate2(
                VECTORIZED_MULTICALLER_SALT,
                hex""
            );

        if (deployedAddress != MULTICALLER) {
            revert InvalidContractAddress(MULTICALLER, deployedAddress);
        }

        console2.log("Multicaller deployed: ", MULTICALLER);

        return MULTICALLER;
    }

    function deployOnlyOwnerMulticaller() public returns (address) {
        console2.log("Deploying OnlyOwnerMulticaller...");

        address predictedAddress = address(
            uint160(
                uint(
                    keccak256(
                        abi.encodePacked(
                            bytes1(0xff),
                            FOUNDRY_CREATE2_FACTORY,
                            VECTORIZED_MULTICALLER_SALT,
                            keccak256(
                                abi.encodePacked(
                                    type(OnlyOwnerMulticaller).creationCode,
                                    abi.encode(SOLVER)
                                )
                            )
                        )
                    )
                )
            )
        );

        if (_hasBeenDeployed(predictedAddress)) {
            console2.log(
                "OnlyOwnerMulticaller has already been deployed at: ",
                predictedAddress
            );
            return ONLY_OWNER_MULTICALLER;
        }

        // Reuse salt for simplicity
        OnlyOwnerMulticaller onlyOwnerMulticaller = new OnlyOwnerMulticaller{
            salt: VECTORIZED_MULTICALLER_SALT
        }(SOLVER);

        console2.log(
            "OnlyOwnerMulticaller deployed: ",
            address(onlyOwnerMulticaller)
        );

        return address(onlyOwnerMulticaller);
    }

    function deployApprovalProxy(address router) public returns (address) {
        console2.log("Deploying ApprovalProxy...");

        address predictedAddress = address(
            uint160(
                uint(
                    keccak256(
                        abi.encodePacked(
                            bytes1(0xff),
                            FOUNDRY_CREATE2_FACTORY,
                            VECTORIZED_MULTICALLER_SALT,
                            keccak256(
                                abi.encodePacked(
                                    type(ApprovalProxy).creationCode,
                                    abi.encode(SOLVER, router)
                                )
                            )
                        )
                    )
                )
            )
        );

        if (_hasBeenDeployed(predictedAddress)) {
            console2.log(
                "ApprovalProxy has already been deployed at: ",
                predictedAddress
            );
            return predictedAddress;
        }

        // Reuse salt for simplicity
        ApprovalProxy approvalProxy = new ApprovalProxy{
            salt: VECTORIZED_MULTICALLER_SALT
        }(SOLVER, router);

        if (address(approvalProxy) != predictedAddress) {
            revert InvalidContractAddress(
                predictedAddress,
                address(approvalProxy)
            );
        }

        console2.log("ApprovalProxy deployed: ", address(approvalProxy));

        return address(approvalProxy);
    }

    /// @notice Deploys the OwnableRelayRouter contract to the given chain
    function deployOwnableRelayRouter(
        address permit2,
        address multicaller
    ) public returns (address) {
        console2.log("Deploying OwnableRelayRouter...");

        address predictedAddress = address(
            uint160(
                uint(
                    keccak256(
                        abi.encodePacked(
                            bytes1(0xff),
                            FOUNDRY_CREATE2_FACTORY,
                            ROUTER_SALT,
                            keccak256(
                                abi.encodePacked(
                                    type(OwnableRelayRouter).creationCode,
                                    abi.encode(permit2, multicaller, SOLVER)
                                )
                            )
                        )
                    )
                )
            )
        );

        if (_hasBeenDeployed(predictedAddress)) {
            console2.log(
                "OwnableRelayRouter has already been deployed at: ",
                predictedAddress
            );
            return predictedAddress;
        }

        OwnableRelayRouter router = new OwnableRelayRouter{salt: ROUTER_SALT}(
            permit2,
            SOLVER
        );

        if (address(router) != predictedAddress) {
            revert InvalidContractAddress(predictedAddress, address(router));
        }

        console2.log("OwnableRelayRouter deployed: ", address(router));

        return address(router);
    }

    /// @notice Deploys the Relay Receiver contract to the given chain
    function deployRelayReceiver(address _solver) public returns (address) {
        console2.log("Deploying Receiver...");

        address predictedAddress = address(
            uint160(
                uint(
                    keccak256(
                        abi.encodePacked(
                            bytes1(0xff),
                            FOUNDRY_CREATE2_FACTORY,
                            VECTORIZED_MULTICALLER_SALT,
                            keccak256(
                                abi.encodePacked(
                                    type(RelayReceiver).creationCode,
                                    abi.encode(_solver)
                                )
                            )
                        )
                    )
                )
            )
        );

        if (_hasBeenDeployed(predictedAddress)) {
            console2.log(
                "Receiver has already been deployed at: ",
                predictedAddress
            );
            return predictedAddress;
        }

        // Reuse salt for simplicity
        RelayReceiver relayReceiver = new RelayReceiver{
            salt: VECTORIZED_MULTICALLER_SALT
        }(_solver);

        console2.log("Receiver deployed: ", address(relayReceiver));

        return address(relayReceiver);
    }

    function deployPermit2() public returns (address) {
        console2.log("Deploying Permit2...");

        if (_hasBeenDeployed(PERMIT2)) {
            console2.log("Permit2 has already been deployed at: ", PERMIT2);
            return PERMIT2;
        }

        (bool success, bytes memory data) = FOUNDRY_CREATE2_FACTORY.call(
            hex""
        );

        if (!success || address(bytes20(data)) != PERMIT2) {
            revert InvalidContractAddress(PERMIT2, address(bytes20(data)));
        }

        console2.log("Permit2 deployed:", PERMIT2);

        return PERMIT2;
    }

    function deployOnlyOwnerMulticaller__latestBytecode(
        address expectedAddress
    ) public returns (address) {
        console2.log("Deploying OnlyOwnerMulticaller...");

        if (_hasBeenDeployed(expectedAddress)) {
            console2.log(
                "OnlyOwnerMulticaller has already been deployed at: ",
                expectedAddress
            );
            return expectedAddress;
        }

        // 0xb90ed4c123843cbFD66b11411Ee7694eF37E6E72
        (bool success, bytes memory data) = FOUNDRY_CREATE2_FACTORY.call(
            hex""
        );

        if (!success || address(bytes20(data)) != expectedAddress) {
            revert InvalidContractAddress(
                expectedAddress,
                address(bytes20(data))
            );
        }

        console2.log("OnlyOwnerMulticaller deployed: ", expectedAddress);

        return expectedAddress;
    }

    function deployRelayReceiver__latestBytecode(
        address expectedAddress
    ) public returns (address) {
        console2.log("Deploying RelayReceiver...");

        if (_hasBeenDeployed(expectedAddress)) {
            console2.log(
                "RelayReceiver has already been deployed at: ",
                expectedAddress
            );
            return expectedAddress;
        }

        // 0xa06e1351E2fD2D45b5D35633ca7eCF328684a109
        (bool success, bytes memory data) = FOUNDRY_CREATE2_FACTORY.call(
            hex""
        );

        if (!success || address(bytes20(data)) != expectedAddress) {
            revert InvalidContractAddress(
                expectedAddress,
                address(bytes20(data))
            );
        }

        console2.log("RelayReceiver deployed: ", expectedAddress);

        return expectedAddress;
    }

    function _hasBeenDeployed(
        address contractToCheck
    ) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(contractToCheck)
        }
        return (size > 0);
    }

    function _deployMulticallerWithDefaultCreate2Factory()
        internal
        returns (address)
    {
        address predictedAddress = address(
            uint160(
                uint(
                    keccak256(
                        abi.encodePacked(
                            bytes1(0xff),
                            FOUNDRY_CREATE2_FACTORY,
                            VECTORIZED_MULTICALLER_SALT,
                            keccak256(
                                abi.encodePacked(type(Multicaller).creationCode)
                            )
                        )
                    )
                )
            )
        );

        if (_hasBeenDeployed(predictedAddress)) {
            console2.log(
                "Multicaller has already been deployed at: ",
                predictedAddress
            );
            return predictedAddress;
        }

        Multicaller multicaller = new Multicaller{
            salt: VECTORIZED_MULTICALLER_SALT
        }();

        return address(multicaller);
    }
}
